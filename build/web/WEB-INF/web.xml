<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <!-- <!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"><web-app> -->
    <display-name>Vendor Payment Tracking System</display-name>
    <servlet>
        <servlet-name>LoadPropertiesServlet</servlet-name>
        <servlet-class>in.emp.common.LoadPropertiesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoadSchedulerServlet</servlet-name>
        <servlet-class>in.emp.common.LoadSchedulerServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AjaxControlServlet</servlet-name>
        <servlet-class>in.emp.common.AjaxControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicationControlServlet</servlet-name>
        <servlet-class>in.emp.arch.ApplicationControlServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GenerateFileServlet</servlet-name>
        <servlet-class>in.emp.common.GenerateFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imageServlet</servlet-name>
        <servlet-class>in.emp.common.imageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JasperReportServlet</servlet-name>
        <servlet-class>in.emp.common.JasperReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>in.emp.common.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PieChartDemo</servlet-name>
        <servlet-class>in.emp.vendor.piechart.PieChartDemo</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>LegalServlet</servlet-name>
        <servlet-class>in.emp.legal.servlet.LegalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadSchedulerServlet</servlet-name>
        <url-pattern>/LoadSchedulerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadPropertiesServlet</servlet-name>
        <url-pattern>/LoadPropertiesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxControlServlet</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationControlServlet</servlet-name>
        <url-pattern>/erp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationControlServlet</servlet-name>
        <url-pattern>/chooseLanguage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateFileServlet</servlet-name>
        <url-pattern>/generateFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JasperReportServlet</servlet-name>
        <url-pattern>/Reports</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imageServlet</servlet-name>
        <url-pattern>/imageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/FileDownloadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PieChartDemo</servlet-name>
        <url-pattern>/PieChartDemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LegalServlet</servlet-name>
        <url-pattern>/LegalServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/emp_login_page.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources.messages</param-value>
    </context-param>
    <listener>
        <listener-class>in.emp.common.EmpServletContextListener</listener-class>
    </listener>
</web-app>
